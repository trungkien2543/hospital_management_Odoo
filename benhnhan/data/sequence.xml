<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence cho mã bệnh nhân -->
        <record id="seq_benhnhan" model="ir.sequence">
            <field name="name">Mã bệnh nhân</field>
            <field name="code">benhvien.benhnhan</field>
            <field name="prefix">BN-</field>
            <field name="padding">3</field>  
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequence cho hồ sơ bệnh án -->
        <record id="seq_hoso_benhan" model="ir.sequence">
            <field name="name">Hồ Sơ Bệnh Án</field>
            <field name="code">benhvien.hosobenhan</field>
            <field name="prefix">HS-</field>
            <field name="padding">3</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>
