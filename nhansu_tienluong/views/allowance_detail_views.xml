<odoo>
    <record id="view_allowance_detail_tree" model="ir.ui.view">
        <field name="name">hr.allowance.detail.list</field>
        <field name="model">hr.allowance.detail</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="allowance_id"/>
            </list>
        </field>
    </record>

    <record id="view_allowance_detail_form" model="ir.ui.view">
        <field name="name">hr.allowance.detail.form</field>
        <field name="model">hr.allowance.detail</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="employee_id"/>
                    <field name="allowance_id"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_allowance_detail" model="ir.actions.act_window">
        <field name="name">Chi tiết Phụ cấp</field>
        <field name="res_model">hr.allowance.detail</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_allowance_detail" name="Chi tiết Phụ cấp" parent="menu_hr_payroll" action="action_allowance_detail"/>
</odoo>
