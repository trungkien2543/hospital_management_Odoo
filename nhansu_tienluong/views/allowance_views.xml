<odoo>
    <record id="view_allowance_tree" model="ir.ui.view">
        <field name="name">hr.allowance.tree</field>
        <field name="model">hr.allowance</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
                <field name="amount"/>
            </list>
        </field>
    </record>

    <record id="view_allowance_form" model="ir.ui.view">
        <field name="name">hr.allowance.form</field>
        <field name="model">hr.allowance</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="amount"/>
                </group>
            </form>
        </field>
    </record>

    <menuitem id="menu_hr_payroll" name="Lương, phụ cấp"/>


    <record id="action_allowance" model="ir.actions.act_window">
        <field name="name">Phụ cấp</field>
        <field name="res_model">hr.allowance</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_allowance" name="Phụ cấp" parent="menu_hr_payroll" action="action_allowance"/>
    
</odoo>
