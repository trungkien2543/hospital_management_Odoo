<odoo>
    <record id="view_salary_tree" model="ir.ui.view">
        <field name="name">hr.salary.list</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="employee_id"/>
                <field name="month_year"/>
                <field name="working_days"/>
                <field name="overtime_hours"/>
                <field name="base_salary"/>
                <field name="salary_coefficient"/>
                <field name="allowance"/>
                <field name="tax_income"/>
                <field name="note"/>
            </list>
        </field>
    </record>

    <record id="view_salary_form" model="ir.ui.view">
        <field name="name">hr.salary.form</field>
        <field name="model">hr.salary</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code"/>
                    <field name="employee_id"/>
                    <field name="month_year"/>
                    <field name="working_days"/>
                    <field name="overtime_hours"/>
                    <field name="base_salary"/>
                    <field name="salary_coefficient"/>
                    <field name="allowance"/>
                    <field name="tax_income"/>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>
    
    <menuitem id="menu_hr_payroll" name="Lương, phụ cấp"/>

    <record id="action_salary" model="ir.actions.act_window">
        <field name="name">Tiền Lương</field>
        <field name="res_model">hr.salary</field>
        <field name="view_mode">list,form</field>
    </record>
    
    <menuitem id="menu_salary" name="Tiền Lương" parent="menu_hr_payroll" action="action_salary"/>

</odoo>
