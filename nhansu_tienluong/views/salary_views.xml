<odoo>
    <record id="view_salary_tree" model="ir.ui.view">
        <field name="name">salary.tree</field>
        <field name="model">nhansu_tienluong.salary</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="month_year"/>
                <field name="work_days"/>
                <field name="overtime_hours"/>
                <field name="base_salary"/>
                <field name="salary_multiplier"/>
                <field name="allowance_id"/>
                <field name="tax"/>
            </list>
        </field>
    </record>

    <record id="view_salary_form" model="ir.ui.view">
        <field name="name">salary.form</field>
        <field name="model">nhansu_tienluong.salary</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="month_year"/>
                        <field name="work_days"/>
                        <field name="overtime_hours"/>
                        <field name="base_salary"/>
                        <field name="salary_multiplier"/>
                        <field name="allowance_id"/>
                        <field name="tax"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_salary" name="Tiền lương" parent="menu_nhansu_tienluong" action="action_salary"/>
    
    <record id="action_salary" model="ir.actions.act_window">
        <field name="name">Tiền lương</field>
        <field name="res_model">nhansu_tienluong.salary</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
