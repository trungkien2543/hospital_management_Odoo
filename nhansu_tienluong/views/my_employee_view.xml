<odoo>
    <record id="view_my_employee_list" model="ir.ui.view">
        <field name="name">my.employee.list</field>
        <field name="model">my.employee</field>
        <field name="arch" type="xml">
            <list string="Employees">
                <field name="employee_code"/>
                <field name="name"/>
                <field name="job_position"/>
                <field name="phone"/>
                <field name="manager_id"/>
            </list>
        </field>
    </record>

    <record id="view_my_employee_form" model="ir.ui.view">
        <field name="name">my.employee.form</field>
        <field name="model">my.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <group>
                        <field name="employee_code"/>
                        <field name="name"/>
                        <field name="job_position"/>
                        <field name="address"/>
                        <field name="birth_date"/>
                        <field name="gender"/>
                        <field name="cccd"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="image" widget="image"/>
                        <field name="manager_id"/>
                    </group>
                    <notebook>
                        <page string="Kinh nghiem">
                            <field name="experience_ids">
                                
                            </field>
                        </page>

                        <page string="Kỹ năng">
                            <field name="skill_ids">
                                
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_my_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">my.employee</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_my_employees_root" name="Nhân sự"/>
    <menuitem id="menu_my_employees" name="Employees" parent="menu_my_employees_root" action="action_my_employee"/>
</odoo>
