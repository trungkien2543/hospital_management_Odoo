<odoo>
    <record id="view_benhvien_nhansu_list" model="ir.ui.view">
        <field name="name">benhvien.nhansu.list</field>
        <field name="model">benhvien.nhansu</field>
        <field name="arch" type="xml">
            <list string="Nhân viên">
                <field name="employee_code"/>
                <field name="name"/>
                <field name="job_position"/>
                <field name="phone"/>
                <field name="manager_id"/>
                <!-- <field name="khoa"/> -->
            </list>
        </field>
    </record>

    <record id="view_benhvien_nhansu_form" model="ir.ui.view">
        <field name="name">benhvien.nhansu.form</field>
        <field name="model">benhvien.nhansu</field>
        <field name="arch" type="xml">
            <form string="Nhân viên">
                <sheet>
                    <group>
                        <field name="employee_code"/>
                        <field name="name"/>
                        <field name="job_position"/>
                        <field name="address"/>
                        <field name="birth_date"/>
                        <field name="gender"/>
                        <field name="cccd"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="image" widget="image"/>
                        <field name="manager_id"/>
                        <!-- <field name="khoa"/> -->
                    </group>
                    <notebook>
                        <page string="Kinh nghiệm">
                            <field name="experience_ids"/>
                        </page>

                        <page string="Kỹ năng">
                            <field name="skill_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_benhvien_nhansu" model="ir.actions.act_window">
        <field name="name">Nhân viên</field>
        <field name="res_model">benhvien.nhansu</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_benhvien_nhansu_root" name="Nhân sự"/>
    <menuitem id="menu_benhvien_nhansu" name="Nhân viên" parent="menu_benhvien_nhansu_root" action="action_benhvien_nhansu"/>
</odoo>
