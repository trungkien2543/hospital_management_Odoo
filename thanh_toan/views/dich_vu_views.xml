<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View (Danh sách dịch vụ) -->
    <record id="view_dich_vu_tree" model="ir.ui.view">
        <field name="name">benhvien.dich_vu.tree</field>
        <field name="model">benhvien.dich_vu</field>
        <field name="arch" type="xml">
            <list string="Danh sách dịch vụ">
                <field name="ten_dich_vu"/>
                <field name="don_gia"/>
                <field name="currency_id"/>
                <field name="mo_ta"/>
            </list>
        </field>
    </record>

    <!-- Form View (Chi tiết dịch vụ) -->
    <record id="view_dich_vu_form" model="ir.ui.view">
        <field name="name">benhvien.dich_vu.form</field>
        <field name="model">benhvien.dich_vu</field>
        <field name="arch" type="xml">
            <form string="Chi tiết dịch vụ">
                <sheet>
                    <group>
                        <group>
                            <field name="ten_dich_vu"/>
                            <field name="don_gia"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="mo_ta"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
