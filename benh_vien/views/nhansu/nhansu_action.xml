<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="action_benhvien_tienluong_chitietphucap" model="ir.actions.act_window">
            <field name="name">Chi tiết Phụ cấp</field>
            <field name="res_model">benhvien.tienluong.chitietphucap</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_benhvien_tienluong_phucap" model="ir.actions.act_window">
            <field name="name">Phụ cấp</field>
            <field name="res_model">benhvien.tienluong.phucap</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_benhvien_nhansu" model="ir.actions.act_window">
            <field name="name">Nhân viên y tế</field>
            <field name="res_model">benhvien.nhansu</field>
            <field name="view_mode">kanban,list,form</field> <!-- Ưu tiên kanban -->
        </record>


        <record id="action_benhvien_tienluong" model="ir.actions.act_window">
            <field name="name">Bảng Lương</field>
            <field name="res_model">benhvien.tienluong</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="view_benhvien_tienluong_chitietphucap_form" model="ir.ui.view">
            <field name="name">benhvien.tienluong.chitietphucap.form</field>
            <field name="model">benhvien.tienluong.chitietphucap</field>
            <field name="arch" type="xml">
                <form string="Chi tiết Phụ cấp">
                    <sheet>
                        <group>
                            <field name="employee_code"/>
                            <field name="allowance_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>