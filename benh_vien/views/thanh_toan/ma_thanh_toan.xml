<odoo>
    <record id="view_ma_thanh_toan_form" model="ir.ui.view">
        <field name="name">ma.thanh.toan.form</field>
        <field name="model">benhvien.ma_thanh_toan</field>
        <field name="arch" type="xml">
            <form string="Mã Thanh Toán">
                <sheet>
                    <group>
                        <field name="ngay_thanh_toan" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="so_tien" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="phuong_thuc" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="trang_thai" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="hoa_don_id" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="mo_ta" modifiers="{'readonly': [('is_bhyt', '=', True)]}"/>
                        <field name="is_bhyt"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ma_thanh_toan_tree" model="ir.ui.view">
        <field name="name">ma.thanh.toan.tree</field>
        <field name="model">benhvien.ma_thanh_toan</field>
        <field name="arch" type="xml">
            <list string="Danh Sách Thanh Toán">
                <field name="ngay_thanh_toan"/>
                <field name="so_tien"/>
                <field name="phuong_thuc"/>
                <field name="trang_thai"/>
            </list>
        </field>
    </record>
</odoo>
