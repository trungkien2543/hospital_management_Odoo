<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!-- Quản lý thuốc   -->
     <record id="seq_phieu_nhap" model="ir.sequence">
        <field name="name">Mã Phiếu Nhập</field>
        <field name="code">benhvien.phieu_nhap</field>
        <field name="prefix">PN</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="seq_phieu_xuat" model="ir.sequence">
        <field name="name">Mã Phiếu Xuất</field>
        <field name="code">benhvien.phieu_xuat</field>
        <field name="prefix">PX</field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

     <record id="seq_medicine_code" model="ir.sequence">
        <field name="name">Medicine Code</field>
        <field name="code">benhvien.thuoc</field>
        <field name="prefix">MED</field>  <!-- Tiền tố (có thể thay đổi) -->
        <field name="padding">4</field>  <!-- Độ dài số (MED0001, MED0002, ...) -->
    </record>

    <record id="seq_lo_hang" model="ir.sequence">
        <field name="name">Mã Lô Hàng</field>
        <field name="code">benhvien.lo_hang</field>
        <field name="prefix"></field>
        <field name="padding">5</field>
        <field name="company_id" eval="False"/>
    </record>

    <record id="seq_don_vi_tinh_code" model="ir.sequence">
        <field name="name">Don Vi Tinh Code</field>
        <field name="code">benhvien.don_vi_tinh</field>
        <field name="prefix">DVT</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>

    <data noupdate="1">
        <record id="seq_hoa_don" model="ir.sequence">
            <field name="name">Mã Hóa Đơn</field>
            <field name="code">benhvien.hoa_don</field>
            <field name="prefix">HD</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>


    <record id="seq_benhvien_ma_thanh_toan" model="ir.sequence">
        <field name="name">Mã Thanh Toán</field>
        <field name="code">benhvien.ma_thanh_toan</field>
        <field name="prefix">MTT</field>  <!-- Mã tiền tố, có thể là "MTT" hoặc khác -->
        <field name="padding">4</field>   <!-- Số ký tự tối thiểu -->
        <field name="number_increment">1</field> <!-- Tăng tự động mỗi khi tạo mới -->
    </record>

</odoo>
